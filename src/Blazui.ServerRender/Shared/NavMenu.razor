</style>
<BMenu Mode="@MenuMode.Vertical" DefaultActive="0">
    @*<MenuItem Route="">快速上手</MenuItem>*@
    <BMenuItem Route="button">Button 按钮</BMenuItem>
    <BMenuItem Route="input">Input 输入框</BMenuItem>
    <BMenuItem Route="radio">Radio 单选框</BMenuItem>
    <BMenuItem Route="checkbox">Checkbox 多选框</BMenuItem>
    <BMenuItem Route="select">Select 选择器</BMenuItem>
    <BMenuItem Route="switch">Switch</BMenuItem>
    <BMenuItem Route="menu">NavMenu 导航菜单</BMenuItem>
    <BMenuItem Route="tabs">Tabs 标签页</BMenuItem>
    <BMenuItem Route="table">Table 表格</BMenuItem>
    <BMenuItem Route="message">Message 消息</BMenuItem>
    <BMenuItem Route="pagination">Pagination 分页</BMenuItem>
    <BMenuItem Route="loading">Loading 加载中</BMenuItem>
    <BMenuItem Route="messagebox">MessageBox 消息弹窗</BMenuItem>
    <BMenuItem Route="dialog">Dialog 对话框</BMenuItem>
    <BMenuItem Route="datepicker">DatePicker 日期选择器</BMenuItem>
    <BMenuItem Route="form">Form 表单</BMenuItem>
    <BMenuItem Route="layout">Layout 布局面板</BMenuItem>
    <BMenuItem Route="upload">Upload 文件上传（尚未完成）</BMenuItem>
    <BMenuItem Route="dropdown">DropDown 下拉菜单</BMenuItem>
</BMenu>

@code {

    [Inject]
    NavigationManager NavigationManager { get; set; }
    protected override void OnInitialized()
    {
        if (new Uri(NavigationManager.Uri).LocalPath == "/")
        {
            NavigationManager.NavigateTo("button");
        }
    }
}
