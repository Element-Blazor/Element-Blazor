@inherits BDialogBase
@using Blazui.Markdown.IconHandlers

<BForm @ref="form">
    <BFormItem TValue="string" IsRequired="true" Name="@nameof(FileModel.Name)" Label="名称">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Name="@nameof(FileModel.Title)" Label="标题">
        <BInput TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string[]" IsRequired="true" Name="@nameof(FileModel.Urls)" Label="文件">
        <BMarkdownFileUpload DisableUpload="DisableUpload" Tip="@Tip" UploadUrl="@UploadUrl" UploadType="UploadType.File" AllowExtensions="AllowExtensions" MaxSize="MaxSize"></BMarkdownFileUpload>
    </BFormItem>
    <BFormActionItem Style="text-align:right">
        <BButton Type="@ButtonType.Primary" @onclick="Submit">确定</BButton>
    </BFormActionItem>
</BForm>